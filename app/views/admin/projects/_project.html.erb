<div class="row" id="<%=@project.id%>">
	<%= image_tag("/uploads/#{@project.image}", :class=>"col-sm-3 col-xs-4")%>
	<div class="col-sm-8">
		<h4 class="pro-name"><%= @project.title %></h4>
		<p><%= @project.description %></p>
		<p>Source Code: <%= @project.source %></p>
		<p>project's link: <%= @project.link %></p>
		<div class="feedback">
			<i class="fa fa-star-o" aria-hidden="true"></i> <span>Stars</span>
			<i class="fa fa-eye" aria-hidden="true"></i> Viewes
		</div>
	</div>
	<div class="dropdown col-sm-1">
		<span class="dropdown-toggle" data-toggle="dropdown">
			<i class="fa fa-ellipsis-v" aria-hidden="true"></i>
		</span>

		<ul class="dropdown-menu">
			<li>
				<%= link_to 'Edit', edit_admin_project_path(@project) %>
			</li>
			<li>
				<%= link_to 'Delete',admin_project_path(@project), method: :delete, data: {confirm: 'Are you sure you want to delete this project?'}, remote: true  %>
			</li>
		</ul>
	</div> 
</div>