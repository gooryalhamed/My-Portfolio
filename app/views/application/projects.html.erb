<header>
	<div class="container">
		<h1>PROJECTS</h1>
		<p>A list of open source projects I built. Your feedback is much appreciated.</p>
	</div>
</header>
<% @projects.each do |proj| %>
<div class="row">
	<%= image_tag("/uploads/#{proj.image}", :class=>"col-sm-3 col-xs-4")%>
	<div class="col-sm-8">
		<h4 class="pro-name"><%= proj.title %></h4>
		<p><%= proj.description %></p>
		<div class="feedback">
			<i class="fa fa-star-o" aria-hidden="true"></i> <span>Stars</span>
			<i class="fa fa-eye" aria-hidden="true"></i> Viewes
		</div>
	</div>
	<div class="dropdown col-sm-1">
		<span class="dropdown-toggle" data-toggle="dropdown">
			<i class="fa fa-ellipsis-v" aria-hidden="true"></i>
		</span>
		
		<ul class="dropdown-menu">
			<li>
				<a href="<%= proj.source %>" target="_blank">
					source code
				</a>
			</li>
			<li>
				<a href="<%= proj.link %>" target="_blank">
					see the project
				</a>
			</li>
		</ul>
	</div> 
</div>
<hr>
<% end %>