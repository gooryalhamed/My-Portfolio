        </ul>
      </div>

      <div class="col-sm-6">
       <h1>CONTACT ME</h1>
       <p>looking forward to recieve your email</p>
       <%= form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>

       <%= f.text_field :name, :required => true, :placeholder => "Your Name" %>
       
       <%= f.email_field :email, :required => true, :placeholder => "Your Email" %>

       <%= f.text_field :message, :as => :text, :required => true,:placeholder => "Your Message", :id => "msg" %>
       <%= f.submit 'Send'%>

       <div class= "hidden">
        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
      </div>
      <% end %>
    </div>
  </div>
